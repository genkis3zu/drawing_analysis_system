{
  "hooks": {
    "user-prompt-submit": [
      ".claude/hooks/pre-commit.sh"
    ],
    "task-complete": [
      ".claude/hooks/task-complete.sh",
      ".claude/hooks/auto-commit-reminder.sh"
    ]
  },
  "permissions": {
    "allow": [
      "Bash(python:*)",
      "Bash(where python)",
      "Bash(py --version)",
      "Bash(py:*)",
      "Bash(rmdir:*)",
      "Bash(rm:*)",
      "Bash(mkdir:*)",
      "Bash(git add:*)",
      "Bash(git config:*)",
      "Bash(git push:*)",
      "Bash(ls:*)",
      "Bash(pip install:*)"
    ],
    "deny": []
  }
}